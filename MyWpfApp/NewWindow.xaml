<Window x:Class="WpfApp1.NewWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Grid of Images" Height="300" Width="400">
     <Grid x:Name="ImageGrid">
        <!-- Define Grid Structure -->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Image 1 -->
        <Image Grid.Row="0" Grid.Column="0" Source="image1.jpg" Width="100" Height="100" Margin="5"/>
        
        <!-- Image 2 -->
        <Image Grid.Row="0" Grid.Column="1" Source="image2.jpg" Width="100" Height="100" Margin="5"/>
        
        <!-- Image 3 -->
        <Image Grid.Row="1" Grid.Column="0" Source="image3.jpg" Width="100" Height="100" Margin="5"/>
        
        <!-- Image 4 -->
        <Image Grid.Row="1" Grid.Column="1" Source="image4.jpg" Width="100" Height="100" Margin="5"/>

        <!-- Image 5 -->
        <Image Grid.Row="2" Grid.Column="0" Source="image5.jpg" Width="100" Height="100" Margin="5"/>
        
        <!-- Image 6 -->
        <Image Grid.Row="2" Grid.Column="1" Source="image6.jpg" Width="100" Height="100" Margin="5"/>
    </Grid>
</Window>
